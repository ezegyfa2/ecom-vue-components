.container-flex
    nav.navbar.navbar-light
        .dropdown.d-xl-none.d-lg-none.mr-auto
            img(src='https://png.icons8.com/windows/32/000000/menu.png' data-toggle='dropdown' data-target='#navd' aria-haspopup='true' aria-expanded='false')
            .dropdown-menu.hb(aria-labelledby='navd')
                router-link.dropdown-item(to='/') Home
                router-link.dropdown-item(to='/products') Products
                router-link.dropdown-item(to='/contact') Contact us
        // Logo
        a.navbar-brand.py-0.pl-5
            img(src='@/assets/fi-logo.svg' width='50' height='50')
        // Header navigation
        span.navbar-item.bc.d-none.d-xl-block.d-lg-block.py-0
            router-link.pl-5(to='/') Home
            router-link.px-5(to='/products') Products
            router-link(to='/contact') Contact us
        p.navbar-item.ml-auto
            .searc.d-none.d-xl-block.d-lg-block.pr-3
                input.search(type='search')
            .user
                h5(style='cursor: pointer' data-toggle='modal' data-target='#userModal') Sign In
            .bag(@click='openCart')
                img.pb-1(src='@/assets/cart.svg')
                span.mb-3(v-if='this.bagItemscount > 0') {{ bagItemscount }}
    // User Modal
    #userModal.modal.fade(role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-body
                    button.close(type='button' data-dismiss='modal' style='outline-style:none;' aria-label='Close')
                        span x
                    form.px-3.py-2
                        .form-group
                            label(for='exampleDropdownFormEmail1') Email address
                            input.form-control(type='email' placeholder='email@example.com')
                        .form-group
                            label(for='exampleDropdownFormPassword1') Password
                            input.form-control(type='password' placeholder='Password')
                        .form-check
                            input.form-check-input(type='checkbox')
                            label.form-check-label(for='dropdownCheck')
                                | Remember me
                        button.btn-xl.btn-success.mt-3(type='submit') Sign in
                .modal-footer
                    a.dropdown-item(href='#') Forgot password?
                    a.dropdown-item.text-right(href='#') Sign up
    // Cart Component
    cart(ref='cartMove')
