section
    .container-fluid.py-5
        .row.d-flex
            .col-12.col-xl-6.col-lg-6.col-md-6.col-sm-12.order-sm-0.order-12.margin-right
                img.img-fluid(v-bind:src='image_url' v-bind:alt='image_alt')
            .col-12.col-xl-6.col-lg-5.col-md-6.col-sm-12.order-first.order-xl-0
                h1 {{ title }}
                h2.text-color {{ sub_title }}
                form.form(v-bind:action='url' v-bind:method='method' v-on:submit='submitForm')
                    dynamic-component(
                        v-for='formItemSection in form_item_sections'
                        v-bind:component_infos='formItemSection'
                    )
                    dynamic-component.btn.btn-light(
                        v-bind:component_infos='button_section'
                    )
